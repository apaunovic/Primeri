                <ComboBoxItem Name="GASitem">GAS</ComboBoxItem>
            </ComboBox>
            <Button Margin="10,102,10,173">Connect</Button>
        </Grid>
        
        <Grid Margin="105,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="38*"/>
                <RowDefinition Height="13*" />
                <RowDefinition Height="104*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="1" Margin="302,2,0,2">Cancel</Button>
            <Button Grid.Row="1" Margin="185,2,117,2">Send</Button>
            <TextBox BorderThickness="1" BorderBrush="Black"></TextBox>
            <TextBox Grid.Row="2" BorderThickness="1" BorderBrush="Black" IsReadOnly="True"></TextBox>
        </Grid>
        
        
    </Grid>

</Window>
